root=true

[*]
end_of_line = lf
insert_final_newline = true

[*.sh]
indent_style = space
indent_size = 2
charset = utf-8
file_type_emacs = shell
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 79

[*.{py,pyx}]
indent_style = space
indent_size = 4
charset = utf-8
file_type_emacs = python
trim_trailing_whitespace = true
max_line_length = 79
insert_final_newline = true
